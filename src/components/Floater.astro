---
import DarkMode from "./DarkMode.astro";
import Icon from "./Icon.astro";

const pathname = new URL(Astro.request.url).pathname;

const LINKS = [
  { name: "Home", href: "/", icon: "material-symbols-home" },
  {
    name: "Projects",
    href: "/projects",
    icon: "material-symbols-playlist-add-check",
  },
];
---

<div
  class="fixed group rounded-full -bottom-4 md:flex left-1/2 -translate-x-1/2 hover:bottom-1 transition-all duration-3000 ease-in-out _card bg-opacity-80 backdrop-blur backdrop-filter p-0"
>
  {
    LINKS.map((link) => (
      <a
        href={link.href}
        class:list={[
          {
            "text-zinc-700 dark:text-white": pathname === link.href,
            "text-zinc-600": pathname !== link.href,
          },
          "p-2 group-hover:text-zinc-700 hover:bg-zinc-100 active:bg-zinc-200 dark:group-hover:text-white dark:hover:bg-zinc-800 dark:active:bg-zinc-700",
        ]}
        title={link.name}
      >
        <Icon id={link.icon} className="w-6 h-6" />
      </a>
    ))
  }
  <div class="w-px bg-zinc-200 dark:bg-zinc-700"></div>
  <DarkMode />
</div>
